<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="customer" class="com.mashibing.selfEditor.Customer">
        <property name="name" value="zhangsan"></property>
        <property name="address" value="河北省_邯郸市_武安市"></property>
    </bean>

    <!--注入 CustomEditorConfigurer # PropertyEditorRegistrar[] propertyEditorRegistrars-->
    <!--<bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
        <property name="propertyEditorRegistrars">
            <list>
                <bean class="com.mashibing.selfEditor.AddressPropertyEditorRegistrar"></bean>
            </list>
        </property>
    </bean>-->

    <!--注入 CustomEditorConfigurer # Map<Class<?>, Class<? extends PropertyEditor>> customEditors-->
    <bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
        <property name="customEditors">
            <map>
                <entry key="com.mashibing.selfEditor.Address">
                    <value>com.mashibing.selfEditor.AddressPropertyEditor</value>
                </entry>
            </map>
        </property>
    </bean>
</beans>